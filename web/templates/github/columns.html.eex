<table class="c-table-simple">
  <tr class="c-table-simple__row">
    <%= for column <- @columns do %>
      <%= if length(column["cards"]["nodes"]) >= 1 do %>
        <td class="c-table-simple__cell" style="width:50px;">
          <div class="o-layout">
            <%= render "cards.html", cards: column["cards"]["nodes"] %>
          </div>
        </td>
      <%= end %>
    <%= end %>
  </tr>
</table>
